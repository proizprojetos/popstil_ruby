<!DOCTYPE html>
<html>
<head>
  <title>PopstilRb</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
	<div class="container">
		<div class="row">
		    <div class="logo span3">
		      <a href="/index.php">
		        <%= image_tag "logo_popstil.png" %>
		      </a>
		    </div>
		    <div class="menus">
			    <div class="menu">
			    	<ul class="">
						<li>Carrinho</li>
						<li>Realizar compra</li>
						<% if session[:user_id] %>
							<li><%= link_to 'Meu Popstil', painel_path %></li>
						<% else %>
							<li><%= link_to 'Acessar', login_path %></li>
						<% end %>
					</ul>						
			    </div>
		    	<div class="menu_user">
			    	<% if session[:user_id] %>
						<p>Ol√°, <%= self.current_user.nome %></p>
						<%= link_to 'Logout', logout_path, method: :delete %>
					<% else %>
					<p>&nbsp;</p>		
					<% end %>
			    </div>
		    </div>
		</div>
    </div>
</div>
<%= yield %>

</body>
</html>
